@model Product

<form method="post" enctype="multipart/form-data">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#az" type="button" role="tab" aria-controls="home" aria-selected="true">Az</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#ru" type="button" role="tab" aria-controls="profile" aria-selected="false">Ru</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#en" type="button" role="tab" aria-controls="contact" aria-selected="false">En</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="az" role="tabpanel" aria-labelledby="home-tab">
            <div class="form-group">
                <input type="text" class="form-control btn btn-outline-primary" name="ProductName" placeholder="Enter product name in az" />
                <input type="text" class="form-control btn btn-outline-primary" name="Description" placeholder="Enter Description  in az" />
            </div>
        </div>
        <div class="tab-pane fade" id="ru" role="tabpanel" aria-labelledby="profile-tab">
            <div class="form-group">
                <input type="text" class="form-control btn btn-outline-primary" name="ProductName" placeholder="Enter product name in Ru" />
                <input type="text" class="form-control btn btn-outline-primary" name="Description" placeholder="Enter Description  in Ru" />
            </div>
        </div>
        <div class="tab-pane fade" id="en" role="tabpanel" aria-labelledby="contact-tab">
            <div class="form-group">
                <input type="text" class="form-control btn btn-outline-primary" name="ProductName" placeholder="Enter product name in Eng" />
                <input type="text" class="form-control btn btn-outline-primary" name="Description" placeholder="Enter Description  in Eng" />
            </div>
        </div>
    </div>
    <div class="form-group">

    <input class="form-control btn btn-outline-primary" type="number" name="Price" placeholder="Enter Price" />
    </div>
    <div class="form-group">

    <input class="form-control btn btn-outline-primary" type="number" name="Discount" placeholder="Enter Discount" />
    </div>
    <div class="form-group">

    <input class="form-control btn btn-outline-primary" type="number"  name="Quantity" placeholder="Enter Quantity" />
    </div>
    <div class="form-group">
       <select class="form-control btn btn-outline-success" name="CategoryId" asp-items="ViewBag.Categoryes"></select>
    </div>
    <div class="form-group">
       <input id="productPicture" multiple type="file" accept="Image/*" name="photoUrls" />
    </div>
    <div class="card">
        <div id="productList" class="row">
            <div class="col-2">
                <div class="card p-3">
                    <img class="img-fluid" src="data:image/jpeg;base64," alt="" />
                </div>
            </div>
        </div>
    </div>
    <input type="submit" class="btn btn-success" value="Create" />
    <label for="IsFeatured">IsFeatured</label>
@*    <input type="checkbox"   class="btn btn-success" />*@
    @* @Html.LabelFor(x =>x.IsFeatured)*@
     @Html.CheckBoxFor(x =>x.IsFeatured)
</form>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.1/js/bootstrap.min.js" integrity="sha512-fHY2UiQlipUq0dEabSM4s+phmn+bcxSYzXP4vAXItBvBHU7zAM/mkhCZjtBEIJexhOMzZbgFlPLuErlJF2b+0g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>

        const productPicture = document.getElementById("productPicture");
        const productList = document.getElementById("productList")

         productPicture.addEventListener('change', function(e){

            console.log(this.files)

            var datas = new FormData();

            for (let i = 0; i < this.files.length; i++){
                datas.append("photoUrls", productPicture.files[i]);
            }

            $.ajax({
              url: '/Picture/UploadPictures',
              type: "POST",
              dataType: 'json',
              contentType: false,
              processData: false,
              data: datas,
              success: function(e){
                  console.log(e);
                  CreateCard(e);
              }
           });
        });
        function CreateCard(photo){
            for (let i = 0; i < photo.length; i++) {
                productList.innerHTML +=
                    ` 
                    <div class="col-2">
                        <div class="card p-3">
                           <img class="img-fluid" name="${photo[i]}" src="${photo[i]}" />
                               <input type="hidden" value="${photo[i]}" name="PhotoUrls" />
                          </div>
                     </div>

                     `                   
            }
           
        }

    </script>
}